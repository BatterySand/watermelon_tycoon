@using Sandbox;
@using Sandbox.UI;

@namespace MelTycoon
@inherits Panel


@code
{
	protected override int BuildHash()
	{
		return System.HashCode.Combine(MelGameManager.LocalPlayer.Currency);
	}
}

<root>
	@{
		if (!MelGameManager.LocalPlayer.IsValid())
			return;
	}
	<div class="inner">
		<label text=@MelGameManager.LocalPlayer.Currency.ToString()/>
	</div>
	<style>
		Currency {
			position: absolute;
			bottom: 1%;
			left: 0%;
			width: 100%;
			display: flex;
			justify-content: center;
			text-align: center;

			.inner {
				width: auto;
				min-width: 100px;
				padding-right: 7px;
				background-color: rgba(0,0,0,0.5);
				backdrop-filter: blur(12px);
				border-radius: 3px;
				display: flex;
				align-content: center;

				.label {
					font-family: Poppins;
					font-weight: bold;
					color: white;
					font-size: 64px;
				}
			}
		}
	</style>
</root>
